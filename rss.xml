for($i=0;$i<10;$i++)
{

// 아이템 부분만 반목문으로 돌려주면 된다.
// 변수 부분은 개발자 마음대로 정의해서 사용하시길~
    $random=rand(100000000,10000000000);
	$name = "작성자"+$i;
	$use_type = "카테고리"+$i;
	$subject = "제목"+$i;
	$link = "www.도메인.co.kr/페이지.php?변수1=변수값&amp;변수2=변수값2"+$i;
	$Date = date('r',strtotime($random) ); //주로 아이템이 갱신된 날짜를 입력한다.
